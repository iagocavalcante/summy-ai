{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testMatch": [
    "**/test/**/*.e2e-spec.ts",
    "**/src/features/**/test/**/*.e2e-spec.ts"
  ],
  "setupFilesAfterEnv": ["<rootDir>/test/jest-e2e-setup.ts"],
  "testTimeout": 30000,
  "maxWorkers": 1,
  "forceExit": true,
  "detectOpenHandles": false
}
